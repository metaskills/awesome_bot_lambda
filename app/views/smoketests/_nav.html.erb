
<ul>
  <li><%= link_to 'AwesomeBot Lambda Home', root_path %></li>
  <li><%= link_to 'SmokeTest Home', smoketests_path %></li>
  <% unless response.cache_control[:public] %>
    <li>
      Form, Redirect, Session/Cookies:
      <% if logged_in? %>
        <%= button_to 'Logout', logout_smoketests_path, method: 'delete' %>
      <% else %>
        <%= form_tag login_smoketests_path do %>
          <%= text_field_tag :password, 'password' %>
          <%= submit_tag 'Login' %>
        <% end %>
      <% end %>
    </li>
  <% end %>
  <li><%= link_to 'Cacheable Page', cache_smoketests_path %></li>
  <li><%= link_to 'Exception Page', exception_smoketests_path %></li>
</ul>
